                function kiemtra(){
                    let user = $("#txtUser").val()
                    let password = $("#txtPass").val()
                    let regex = /^[a-zA-Z0-9]+@[a-zA-Z0-9].[a-zA-Z]{2,4}/
                    let regexp = /^[a-zA-Z0-9]{6,32}/

                    if(user.trim()==""){
                        $("#errorUser").html("Cần nhập user")
                            return false
                    }
                    if(!regex.test(user)){
                        $("#errorUser").html("Sai user (example@gmail.com)")
                            return false
                    }
                        $("#errorUser").html("")
                        
                    if(password.trim()==""){
                        $("#errorPass").html("Cần nhập PassWord")
                            return false
                    }
                    if(!regexp.test(password)){
